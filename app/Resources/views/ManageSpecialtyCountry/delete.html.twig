{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Modifier un une catégorie ingrédient | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2>SUPPRIMER LA SPECIALITE : {{ specialtyCountry.country }}</h2>
        <p>Voulez-vous confirmer la suppression de : {{ specialtyCountry.country }} ?</p>
        {# Formulaire pour supprimer la spécialité de pays #}
        <form action="{{ path('manage_specialty_country_delete', {'id': specialtyCountry.id}) }}" method="post">

            <a href="{{ path('manage_specialty_country_index') }}" class="btn btn-primary">Annuler</a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {# Pour générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </section>
{% endblock %}