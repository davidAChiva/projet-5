{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Modifier un type de menu | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2>SUPPRIMER LE TYPE DE MENU : {{ partOfMenu.type }}</h2>
        <p>Voulez-vous confirmer la suppression de : {{ partOfMenu.type }} ?</p>
        {# Formulaire pour supprimer la spécialité de pays #}
        <form action="{{ path('manage_part_of_menu_delete', {'id': partOfMenu.id}) }}" method="post">

            <a href="{{ path('manage_part_of_menu_index') }}" class="btn btn-primary">Annuler</a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {# Pour générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </section>
{% endblock %}