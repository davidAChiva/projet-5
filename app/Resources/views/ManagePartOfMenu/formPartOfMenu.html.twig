<div class="well">
    {{ form_start(form) }}

    {# Gestion des erreurs générales#}
    {{ form_errors(form) }}

    {# Champ type #}
    {{ form_label(form.type,"Type de menu", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.type) }}
    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}

    {% if form.image is defined %}
        <div class="row">
            <img class="col-md-4" src="{{asset(partOfMenu.image.webPath)}}" alt="{{ partOfMenu.image.alt }}" />
        </div>
    {% endif %}
    {# Champ image#}
    {{ form_label(form.image,"Modifier l\'image", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.image) }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}


    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary button_form_recipe'}}) }}

    {# Ajout des éventuels champs cachés + CRSF #}
    {{ form_rest(form) }}

    {{ form_end(form) }}
</div>