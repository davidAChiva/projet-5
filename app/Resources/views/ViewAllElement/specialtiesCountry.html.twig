{% extends "FrontOffice/layout.html.twig" %}

{% block title %}
    Liste des specialit√©s de pays | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2 class="col-md-12">LISTE DES SPECIALITES PAR PAYS</h2>

        {% for specialtyCountry in specialtiesCountry %}
            <figure class="col-md-4 col-sm-5 col-sm-offset-1">
                <h3 class="col-md-12">{{ specialtyCountry.country }}</h3>
                <img class="col-md-12" src="{{ asset(specialtyCountry.image.webPath) }}" alt="{{ specialtyCountry.image.alt }}"/>
                <figcaption class="col-md-10 col-md-offset-1 col-xs-6 col-xs-offset-3">
                    <p class="col-md-12">{{ specialtyCountry.country }}</p>
                    <a href="{{ path('front_office_country_specialty',{'id': specialtyCountry.id, 'slug': specialtyCountry.slug }) }}" class="col-md-6 col-md-offset-3 btn btn-info">Voir les recettes</a>
                </figcaption>
            </figure>
        {% endfor %}

    </section>
{% endblock %}
