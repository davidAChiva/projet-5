{% extends "FrontOffice/layout.html.twig" %}

{% block title %}
    Liste des recettes | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2 class="col-md-12">LISTE DES RECETTES</h2>

        {% for cookingRecipe in cookingRecipes %}
            <figure class="col-md-4">
                <h3 class="col-md-12">{{ cookingRecipe.name }}</h3>
                <img class="col-md-12" src="{{ asset(cookingRecipe.image.webPath) }}" alt="{{ cookingRecipe.image.alt }}"/>
                <figcaption class="col-md-12">
                    <p class="col-md-6">Type : {{ cookingRecipe.partOfMenu.type }}</p>
                    <p class="col-md-6">Spécialité : {{ cookingRecipe.specialtyCountry.country }}</p>
                    <a href="{{ path('front_office_recipe',{'id': cookingRecipe.id }) }}" class="col-md-6 col-md-offset-3 btn btn-info">Voir la recette</a>
                </figcaption>
            </figure>
        {% endfor %}

    </section>

    <ul class="pagination">
        {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('front_office_vertical_menu_cooking_recipes', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}