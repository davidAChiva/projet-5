{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Activer un utilisateur | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2>Activer : {{ user.username }}</h2>
        <p>Voulez-vous activer le compte de : {{ user.username }} ?</p>
        {# Formulaire pour supprimer la spécialité de pays #}
        <form action="{{ path('manage_account_user_activate', {'id': user.id}) }}" method="post">

            <a href="{{ path('manage_account_user') }}" class="btn btn-primary">Annuler</a>
            <input type="submit" value="activer" class="btn btn-success" />
            {# Pour générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </section>
{% endblock %}