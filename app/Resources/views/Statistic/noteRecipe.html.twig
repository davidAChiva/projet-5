{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Statistique recette les mieux notés{{ parent() }}
{% endblock %}

{% block body %}

    <section class="row">
        <h2 class="col-md-12">STATISTIQUE RECETTES LES MIEUX NOTEES</h2>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Classement</th>
                <th scope="col">Id</th>
                <th scope="col">Nom de la recette</th>
                <th scope="col">Spécialité</th>
                <th scope="col">Type</th>
                <th scope="col">Note</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ recipe.id }}</td>
                    <td><a href="{{ path('front_office_recipe',{'id': recipe.id, 'slug': recipe.slug}) }}">{{ recipe.name }}</a></td>
                    <td>{{ recipe.specialtyCountry.country }}</td>
                    <td>{{ recipe.partOfMenu.type }}</td>
                    <td>{{ recipe.averageNotes }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}