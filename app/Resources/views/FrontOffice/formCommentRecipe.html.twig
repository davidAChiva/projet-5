<div class="well">
    {{ form_start(form) }}

    {# Gestion des erreurs générales#}
    {{ form_errors(form) }}

    {# Champ author #}
    {{ form_label(form.author,"Pseudo", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.author) }}
    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}

    {# Champ content #}
    {{ form_label(form.content,"Votre commentaire", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.content) }}
    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary button_form_recipe'}}) }}
    {{ form_end(form) }}
</div>