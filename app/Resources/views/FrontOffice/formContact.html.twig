<div class="well">
    {{ form_start(form) }}

    {# Gestion des erreurs générales#}
    {{ form_errors(form) }}

    {# Champ name #}
    {{ form_label(form.name,"Nom", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.name) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}

    {# Champ firstname #}
    {{ form_label(form.firstName,"Prénom", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.firstName) }}
    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}

    {# Champ email #}
    {{ form_label(form.email,"E-mail", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

    {# Champ subject #}
    {{ form_label(form.subject,"Sujet", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.subject) }}
    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}

    {# Champ message #}
    {{ form_label(form.message,"Message", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.message) }}
    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary button_form_recipe'}}) }}
    {{ form_end(form) }}
</div>