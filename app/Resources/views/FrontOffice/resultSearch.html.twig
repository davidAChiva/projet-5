{% extends "FrontOffice/layout.html.twig" %}

{% block title %}
   Résultat de la recherche | {{ parent() }}
{% endblock %}

{% block body %}
        {% if recipes | length  > 1 %}
            <h2>RESULTAT DE LA RECHERCHE : {{ recipes | length }} recettes ont été trouvées</h2>
        {% else %}
            <h2>RESULTAT DE LA RECHERCHE : {{ recipes | length }} recette a été trouvé</h2>
        {% endif %}
        <section class="row">
            {% for recipe in recipes%}
            <figure class="col-md-4">
                <h3 class="col-md-12">{{ recipe.name }}</h3>
                <img class="col-md-12" src="{{ asset(recipe.image.webPath) }}" />
                <figcaption class="col-md-12">
                    <p class="col-md-12">Recette : {{ recipe.name }}</p>
                    <a href="{{ path('front_office_recipe',{'id': recipe.id }) }}" class="col-md-6 col-md-offset-3 btn btn-info">Voir la recette</a>
                </figcaption>
            </figure>
        </section>

        {% endfor %}

{% endblock %}
