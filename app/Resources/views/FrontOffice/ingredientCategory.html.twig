{% extends "FrontOffice/layout.html.twig" %}

{% block title %}
    Cat√©gorie {{ category.name }} | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2 class="col-md-12">CATEGORIE {{ category.name | upper }}</h2>
        <p class="col-md-12">Recherchez une recette avec un  {{ category.name | lower }} comme base</p>

        {% for ingredient in ingredients %}
            <figure class="col-md-4">
                <h3 class="col-md-12">{{ ingredient.name }}</h3>
                <img class="col-md-12" src="{{ asset(ingredient.image.webPath) }}" alt="{{ ingredient.image.alt }}"/>
                <figcaption class="col-md-10 col-md-offset-1">
                    <p class="col-md-12">{{ ingredient.name }}</p>
                    <a href="{{ path('front_office_ingredient',{'id': ingredient.id }) }}" class="col-md-6 col-md-offset-3 btn btn-info">Voir les recettes</a>
                </figcaption>
            </figure>
        {% endfor %}

    </section>

    <section class="row">
        <h3 class="col-md-12">LES RECETTES AVEC {{ category.name | upper }}S </h3>

        {% for recipe in recipesOfCategory %}
            <figure class="col-md-4">
                <h3 class="col-md-12">{{ recipe.name }}</h3>
                <img class="col-md-12" src="{{ asset(recipe.image.webPath) }}" alt="{{ recipe.image.alt }}"/>
                <figcaption class="col-md-10 col-md-offset-1">
                    <p class="col-md-12">{{ recipe.name }}</p>
                    <a href="{{ path('front_office_recipe',{'id': recipe.id }) }}" class="col-md-6 col-md-offset-3 btn btn-info">Voir le recette</a>
                </figcaption>
            </figure>
        {% endfor %}
    </section>
{% endblock %}