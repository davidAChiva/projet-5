{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Supprimer une recette | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2>SUPPRIMER LA RECETTE : {{ cookingRecipe.name }}</h2>
        <p>Voulez-vous confirmer la suppression de : {{ cookingRecipe.name }} ?</p>
        {# Formulaire pour supprimer la spécialité de pays #}
        <form action="{{ path('manage_specialty_country_delete', {'id': cookingRecipe.id}) }}" method="post">

            <a href="{{ path('manage_cooking_recipe_index') }}" class="btn btn-primary">Annuler</a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {# Pour générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </section>
{% endblock %}