{% extends "BackOffice/layout.html.twig" %}

{% block title %}
    Supprimer un commentaire | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="row">
        <h2>SUPPRIMER LE COMMENTAIRE DE : {{ comment.author }}</h2>
        <p>Voulez-vous confirmer la suppression du message de : {{ comment.author }} ?</p>
        {# Formulaire pour supprimer la spécialité de pays #}
        <form action="{{ path('manage_comment_recipe_delete', {'id': comment.id}) }}" method="post">

            <a href="{{ path('manage_comment_recipe_index') }}" class="btn btn-primary">Annuler</a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {# Pour générer le champ CSRF #}
            {{ form_rest(form) }}
        </form>
    </section>
{% endblock %}